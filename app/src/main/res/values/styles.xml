<resources>

    <!-- Color palette -->
    <color name="dark_turquoise">#075663</color>
    <color name="greeny_blue">#58bca9</color>
    <color name="hint_gray">#A8A8A8</color>
    <color name="warm_gray">#808080</color>
    <!--button style-->

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/dark_turquoise</item>
        <item name="android:width">250dp</item>
        <item name="android:height">42dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greeny_blue</item>
        <item name="colorPrimaryDark">@color/greeny_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@color/warm_gray</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="colorButtonNormal">@color/dark_turquoise</item>
    </style>

    <!-- Text styles -->

    <style name="MaterialLightSubheadSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#808080</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>


</resources>