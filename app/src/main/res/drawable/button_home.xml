<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/darker_turquoise" />
            <solid android:color="@color/darker_turquoise" />
        </shape>

    </item>

    <item android:color="@android:color/black">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/dark_turquoise" />
            <solid android:color="@color/dark_turquoise" />
        </shape>
    </item>

</selector>